@model Job

@{
    ViewData["Title"] = Model.JobName;
}

@section Css {
    <style>
        .box {
            border: 1px solid #ddd; /* Kenarlık ekleyebilirsiniz */
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Box shadow eklemek */
        }


        .column {
            width: 100%;
            padding: 0 1em 1em 1em;
            text-align: center;
        }

        .card {
            width: 100%;
            height: 100%;
            padding: 2em 1.5em;
            background: linear-gradient(#ffffff 50%, #2c7bfe 50%);
            background-size: 100% 200%;
            background-position: 0 2.5%;
            border-radius: 5px;
            box-shadow: 0 0 35px rgba(0, 0, 0, 0.12);
            cursor: pointer;
            transition: 0.5s;
        }

        .pclass p {
            max-width: 410px;
        }

        h3 a {
            font-size: 20px;
            font-weight: 600;
            color: #1f194c;
            margin: 1em 0;
        }

        p {
            color: #575a7b;
            font-size: 15px;
            line-height: 1.6;
            letter-spacing: 0.03em;
        }

        .card:hover {
            background-position: 0 100%;
        }

            .card:hover h3 a {
                color: #ffffff;
            }

            .card:hover p {
                color: #f0f0f0;
            }


        .fre {
            background-color: gainsboro;
            display: inline-block;
            border-radius: 5px;
            font-size: 8px;
            padding: 3px 3px;
            margin-top: -13px;
        }




        /* 375 piksəl və daha kiçik ekranlar üçün tənzimləmələr */
        @@media only screen and (max-width: 375px) {

            .jbn {
                font-size: 14px;
            }

            .datcl {
                font-size: 13px;
            }

            .pclass {
                max-width: 162px;
            }

            .function {
                font-size: 13px;
            }
        }

        /* 768 piksəl və daha kiçik ekranlar üçün tənzimləmələr */
        @@media only screen and (min-width:376px) and (max-width: 450px) {

            .jbn {
                font-size: 14px;
            }

            .datcl {
                font-size: 13px;
            }

            .pclass {
                max-width: 180px;
            }

            .function {
                font-size: 13px;
            }
        }

        @@media only screen and (min-width:451px) and (max-width: 575px) {
            .jbn {
                font-size: 15px;
            }

            .datcl {
                font-size: 13px;
            }

            .pclass {
                max-width: 260px;
            }

            .function {
                font-size: 13px;
            }
        }

        @@media only screen and (min-width:576px) and (max-width: 999px) {

            .jbn {
                font-size: 14px;
            }

            .datcl {
                font-size: 13px;
            }

            .pclass {
                max-width: 311px;
            }

            .function {
                font-size: 14px;
            }
        }

        @@media only screen and (min-width:1000px) {

            .jbn {
                font-size: 15px;
            }

            .datcl {
                font-size: 14px;
            }

            .pclass {
                max-width: 315px;
            }

            .function {
                font-size: 14px;
            }
        }

    </style>
}

@{
    var currentDate = DateTime.Today;
    var createdDate = Model.CreatedTime.Date;
    var daysDifference = (currentDate - createdDate).Days;
}

<!-- Job Detail Start -->
<div class="row py-3">

    <div class="col-12 col-md-8">

        <!--Vacancy Start-->
        <div style="margin-bottom:2px;" class="box">
            <div style="display:flex; justify-content: space-between;">

                <div style="display:flex;" class="box-col box-80">
                    <a class="mx-2" style="display:inline-block;" asp-controller="Companies" asp-action="Detail" asp-route-username="@Model.User.UserName">
                        <img src="~/assets/img/company/@Model.User.Image" class="w-px-40 h-auto rounded-circle" />
                    </a>
                    <div class="pclass" style="display: flex; flex-direction: column; margin-left: 10px;">
                        <p style="font-size: 17px; margin-bottom: -2px; margin-top:-1px; display:inline-block;">
                            <a class="jbn" style="color: #000;" href="#">@Model.JobName</a>
                            @if (Model.IsPremium)
                            {
                                <span class="fre" style="color:green;">Premium</span>
                            }
                            else if (daysDifference < 5)
                            {
                                <span class="fre" style="color:red;">Yeni</span>
                            }
                        </p>
                        <span style="font-size: 14px; margin-top: 4px;" class="function">
                            <a style="color:rgba(0,0,0,.5)!important;" asp-controller="Companies" asp-action="Detail" asp-route-username="@Model.User.UserName" style="color: black;">@Model.User.Name</a>
                        </span>
                    </div>
                </div>


                <div class="box-col box-20 text-right">
                    <div class="datcl" style="display: inline-block; flex-direction: column;">
                        <p class="datcl" style="margin-left:-40px;">@Model.CreatedTime.ToString("dd") @Model.CreatedTime.ToString("MMMM").Substring(0, 3)</p>
                    </div>
                </div>

            </div>
        </div>
        <!--Vacancy Finish-->

        <div class="my-2" style="border: 1px solid #303ef7; border-radius: 5px; display: flex; justify-content: center; align-items: center;">
            <p style="color: black;margin-top:8px; font-size:15px;">
                Müraciət üçün son tarix - @Model.DeadLine.ToString("dd MMMM yyyy")
            </p>
        </div>

        <div class="my-2" style="border: 1px solid #303ef7; border-radius: 5px; display: flex; justify-content: center; align-items: center;">
            <p style="color: black;margin-top:8px;">
                @if (Model.JobDetail.Email is not null)
                {
                    <span style="font-size:15px;">Müraciət etmək üçün - @Model.JobDetail.Email</span>
                }
                else
                {
                    <span style="font-size:15px;">Müraciət etmək üçün - <a class="btn btn-primary btn-sm text-white" target="_blank" href="@Model.JobDetail.Link">Link</a></span>
                }
            </p>
        </div>

        <!--Vacancy Short Start-->
        <div class="my-3" style="box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2); border-radius:7px;border: 1px solid  #303ef7;">
            <div style="padding:5px;" class="row">
                <div class="col-md-6">
                    <p style="color:black; font-size:14px;">
                        Elan Kateqoriyası - @Model.JobType.Name<br />
                        Kateqoriya - @Model.Category.Name<br />
                        Maaş - @Model.JobDetail.Salary
                    </p>
                </div>
                <div class="col-6">
                    <p style="color:black;font-size:14px;">
                        Şəhər - @Model.City.Name<br>
                        Təcrübə - @Model.Experience.Name
                    </p>
                </div>
            </div>
        </div>
        <!--Vacancy Short End-->
        <!--Vacancy Detail Start-->
        <div class="mb-5">

            <h5 style="color:black;" class="mb-3">Vəzifə öhdəlikləri :</h5>
            <p>@Html.Raw(Model.JobDetail.Responsibilities)</p>

            <h5 style="color:black;" class="mb-3">Tələb olunan bacarıq :</h5>
            <p>@Html.Raw(Model.JobDetail.RequiredSkills)</p>

            @if (Model.JobDetail.JobGraphic is not null)
            {
                <h5 style="color:black;" class="mb-3">İş qrafiki :</h5>
                <p>@Html.Raw(Model.JobDetail.JobGraphic)</p>
            }

        </div>
        <!--Vacancy Detail End-->

    </div>





    <div class="col-4 d-none d-md-block">
        <div style="display:block;">
            @await Component.InvokeAsync("Company", new { username = Model.User.UserName })
        </div>
    </div>

</div>
<!-- Job Detail End -->
