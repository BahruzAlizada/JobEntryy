@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


<div class="app-brand demo">
    <a asp-controller="Home" asp-action="Index" class="app-brand-link" style="font-family: 'Poppins', sans-serif;">
        <img src="~/assets//img/layouts/xsx.jpg" style="object-fit:cover;" class="w-px-40 h-auto rounded-circle" />
        <span style="color:black;" class="app-brand-text demo menu-text fw-bolder ms-2"><span style="text-transform:uppercase">J</span>ob<span style="text-transform:uppercase"> E</span>ntryy</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
        <i class="bx bx-chevron-left bx-sm align-middle"></i>
    </a>
</div>

<div class="menu-inner-shadow"></div>

<ul class="menu-inner py-1">
    <!-- Dashboard -->
    <li class="menu-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
        <a asp-controller="Home" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bx-briefcase"></i>
            <div>@localizer["Vakansiyalar"]</div>
        </a>
    </li>

    <li class="menu-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Categories" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
        <a asp-controller="Categories" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bx-hive"></i>
            <div>@localizer["Kateqoriyalar"]</div>
        </a>
    </li>

    <li class="menu-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Companies" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
        <a asp-controller="Companies" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bxs-business"></i>
            <div>@localizer["Şirkətlər"]</div>
        </a>
    </li>

    <li class="menu-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Cities" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
        <a asp-controller="Cities" asp-action="Index" class="menu-link">
            <i class='menu-icon tf-icons bx bx-map'></i>
            <div>@localizer["Şəhərlər"]</div>
        </a>
    </li>

</ul>